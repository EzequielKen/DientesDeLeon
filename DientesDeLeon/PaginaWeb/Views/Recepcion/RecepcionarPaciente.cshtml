@model Tuple<System.Data.DataTable, System.Data.DataTable, System.Data.DataTable>

@{
    ViewData["Title"] = "Recepcionar Paciente";
    Layout = "_SistemaLayout";

    var buscar = Context.Request.Query["buscar"].ToString();
    var BuscarAtencion = Context.Request.Query["buscarAtencion"].ToString();
    var Paciente = Model?.Item1;
    var Servicios = Model?.Item2;
    var ServiciosSeleccionados = Model?.Item3;
}
<div>
    <div class="alert alert-light">
        <h1>Recepcionar Paciente</h1>
        <h2>Paciente: @Paciente.Rows[0]["Nombre"].ToString() @Paciente.Rows[0]["Apellido"].ToString()</h2>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="container">
                <!-- BARRA DE BÚSQUEDA -->
                <div class="alert alert-dark mb-3">
                    <form method="get" asp-controller="Recepcion" asp-action="BuscarServicio" class="d-flex align-items-center">
                        <label class="me-2 mb-0">Buscar:</label>
                        <input name="buscar"
                               value="@buscar"
                               class="form-control me-2"
                               placeholder="Buscar..." />
                        <input type="hidden" name="idSala" value="@ViewBag.IdSala" />

                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </form>
                </div>

                <!-- LISTA DE NEGOCIOS -->

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-sm align-middle">
                        <thead>
                            <tr>
                                <th>Servicio</th>
                                <th>Precio</th>
                                <th>Cargar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Servicios == null || Servicios.Rows.Count == 0)
                            {
                                <tr>
                                    <td class="text-center" colspan="@((Servicios?.Columns.Count ?? 1) + 2)">
                                        Sin datos
                                    </td>
                                </tr>
                            }
                            else
                            {
                                for (int fila = 0; fila < Servicios.Rows.Count; fila++)
                                {
                                    var filaActiva = Servicios.Rows[fila]["activo"]?.ToString();
                                    string claseFila = filaActiva == "0" ? "table-danger" : "";

                                    <tr class="@claseFila">
                                        <td>@Servicios.Rows[fila]["Servicio"].ToString()</td>

                                        <td>@string.Format("{0:C2}", Servicios.Rows[fila]["Precio"])</td>
                                        <td class="text-center">
                                            <form method="post" asp-controller="Recepcion" asp-action="EnviarPacienteAEspera" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="idServicio" value="@(Servicios.Rows[fila]["id"].ToString())" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    Cargar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>




            </div>
        </div>
        <div class="col-md-6">
            <div class="container">
                <!-- BARRA DE BÚSQUEDA -->
                <div class="alert alert-dark mb-3">
                    <form method="get" asp-controller="Recepcion" asp-action="BuscarAtencionDePaciente" class="d-flex align-items-center">
                        <label class="me-2 mb-0">Buscar:</label>
                        <input name="BuscarAtencion"
                               value="@BuscarAtencion"
                               class="form-control me-2"
                               placeholder="Buscar..." />
                        <input type="hidden" name="idSala" value="@ViewBag.IdSala" />
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </form>
                </div>

                <!-- LISTA DE NEGOCIOS -->

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-sm align-middle">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Servicio</th>
                                <th>Sala</th>
                                <th>Precio</th>
                                <th>Eliminar</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (ServiciosSeleccionados == null || ServiciosSeleccionados.Rows.Count == 0)
                            {
                                <tr>
                                    <td class="text-center" colspan="@((ServiciosSeleccionados?.Columns.Count ?? 1) + 2)">
                                        Sin datos
                                    </td>
                                </tr>
                            }
                            else
                            {
                                for (int fila = 0; fila < ServiciosSeleccionados.Rows.Count; fila++)
                                {
                                    var filaActiva = ServiciosSeleccionados.Rows[fila]["activo"]?.ToString();
                                    string claseFila = filaActiva == "0" ? "table-danger" : "";

                                    <tr class="@claseFila">
                                        <td>@(ServiciosSeleccionados.Rows[fila]["fecha"].ToString())</td>
                                        <td>@(ServiciosSeleccionados.Rows[fila]["servicio"].ToString())</td>
                                        <td>@(ServiciosSeleccionados.Rows[fila]["id_sala"].ToString())</td>
                                        <td>@(string.Format("{0:C2}", ServiciosSeleccionados.Rows[fila]["precio"]))</td>
                                        <td class="text-center">
                                            <form method="post" asp-controller="Recepcion" asp-action="EliminarAtencion" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="idAtencion" value="@(ServiciosSeleccionados.Rows[fila]["id"].ToString())" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    Eliminar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>




            </div>
        </div>
    </div>
</div>