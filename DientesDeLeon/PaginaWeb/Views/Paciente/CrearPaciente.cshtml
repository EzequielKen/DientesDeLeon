@model PacienteViewModel
@{
    ViewData["Title"] = "Crear Paciente";
    Layout = "_SistemaLayout";
}

<div class="container">
    <form as method="post">
        <div class="alert alert-dark mb-4">
            <h2>Informacion de Usuario</h2>
            <p>Estos son los datos que el usuario utilizara para ingresar al sistema.</p>
            <p>Recuerda que el usuario debe ser unico y no puede repetirse.</p>
            <div class="mb-3">
                <label asp-for="Usuario" class="form-label"></label>
                <input asp-for="Usuario" class="form-control mb-3" type="number" placeholder="DNI de paciente" />
                <span asp-validation-for="Usuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
            <label asp-for="Contraseña" class="form-label"></label>
            <input asp-for="Contraseña" type="text" class="form-control mb-3" placeholder="Contraseña" />
            <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
        </div>
       <hr />
       <div class="alert alert-dark mb-4">
           <h2>Informacion Personal</h2>
           <p>Informacion complementaria del paciente.</p>

           <div class="mb-3">
               <label asp-for="Nombre" class="form-label"></label>
               <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
               <span asp-validation-for="Nombre" class="text-danger"></span>

               <label asp-for="Apellido" class="form-label"></label>
               <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
               <span asp-validation-for="Apellido" class="text-danger"></span>
           </div>

           <div class="mb-3">
                <label asp-for="FechaNacimiento" class="form-label"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control"/>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
           </div>

            <div class="row">
                <div class="col-md-2 mb-3">
                    <label asp-for="CodigoPais" class="form-label"></label>
                    <select asp-for="CodigoPais" asp-items="Model.CodigosPais" class="form-select"></select>
                    <span asp-validation-for="CodigoPais" class="text-danger"></span>
                </div>
                <div class="col-md-2 mb-3">
                    <label asp-for="CodigoArea" class="form-label"></label>
                    <input asp-for="CodigoArea" class="form-control" placeholder="Ej: 11 (código de área)" />
                    <span asp-validation-for="CodigoArea" class="text-danger"></span>
                </div>
                <div class="col-md-8 mb-3">
                    <label asp-for="Telefono" class="form-label"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Ej: 12345678" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
            </div>
       </div>
    </form>
</div>