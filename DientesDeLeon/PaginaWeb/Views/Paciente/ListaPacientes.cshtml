@model System.Data.DataTable
@{
    ViewData["Title"] = "Lista de Negocios";
    Layout = "_SistemaLayout"; // Ensure this layout file exists in your project
    var buscar = Context.Request.Query["buscar"].ToString();
}

<div class="container">

    <!-- BARRA DE BÚSQUEDA -->
    <div class="alert alert-dark mb-3">
        <form method="get" asp-controller="Paciente" asp-action="BuscarPacientes" class="d-flex align-items-center">
            <label class="me-2 mb-0">Buscar:</label>
            <input name="buscar"
                   value="@buscar"
                   class="form-control me-2"
                   placeholder="Buscar..." />
            <button type="submit" name="buscar" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <!-- LISTA DE NEGOCIOS -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    @* Recorremos las columnas para generar el encabezado *@
                    @for (int columna = 1; columna <= Model.Columns.Count - 1; columna++)
                    {
                        <th>@Model.Columns[columna].ColumnName</th>
                    }
                    <th>Recibir</th>
                </tr>
            </thead>
            <tbody>
                @* Recorremos cada fila y cada celda *@
                @for (int fila = 0; fila <= Model.Rows.Count - 1; fila++)
                {
                    <tr>
                        @for (int columna = 1; columna <= Model.Columns.Count - 1; columna++)
                        {
                            <td>@Model.Rows[fila][columna].ToString()</td>
                        }
                        <td>
                            <form method="post" asp-controller="Recepcion" asp-action="RecepcionarPaciente">
                                <input type="hidden" name="pacienteId" value="@Model.Rows[fila]["id"].ToString()" />
                                <button type="submit" class="btn btn-primary">
                                    Recibir
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>