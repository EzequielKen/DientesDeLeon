@*
    Layout principal corregido para el proyecto
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es-AR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <title>@ViewData["Title"]</title>
    <link rel="icon" href="~/Sistema/imagenes/logo.png" />

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
          crossorigin="anonymous" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
          rel="stylesheet" />

    <!-- FontAwesome -->
    <link href="https://use.fontawesome.com/releases/v5.7.2/css/all.css"
          rel="stylesheet"
          integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr"
          crossorigin="anonymous" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500&display=swap"
          rel="stylesheet" />

    <!-- Plugins CSS -->
    <link rel="stylesheet" href="~/Sistema/assets/css/jquery.mCustomScrollbar.min.css" />
    <link rel="stylesheet" href="~/Sistema/assets/css/animate.css" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema/assets/css/style.css" />
    <link rel="stylesheet" href="~/Sistema/assets/css/media-queries.css" />

    <!-- Open Graph -->
    <meta property="og:image" content="https://aiden.com.ar/Content/imagenes/logo-background.png" />
    <meta property="og:title" content="Catering" />
    <meta property="og:description" content="Catering." />
    <meta property="og:url" content="https://aiden.com.ar" />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Catering" />
    <meta property="og:locale" content="es_AR" />
</head>
<body class="bg-dark text-white">
    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="dismiss"><i class="fas fa-arrow-left"></i></div>
            <div class="logo">
                <h3><a asp-controller="Landing" asp-action="LandingAdmin">Landing</a></h3>
            </div>
            <ul class="list-unstyled menu-elements">
                <!-- Home -->
                <li>
                    <a href="#"
                       data-bs-toggle="collapse"
                       data-bs-target="#otherSections"
                       aria-expanded="false"
                       aria-controls="otherSections"
                       role="button">
                        <i class="fas fa-home"></i> Home
                    </a>
                    <ul class="collapse list-unstyled" id="otherSections">
                        <li><a asp-controller="Landing" asp-action="LandingAdmin">Landing</a></li>
                        <hr />
                        <li><a asp-controller="home" asp-action="index">Cerrar Sesión</a></li>
                    </ul>
                </li>

                <hr />

                <!-- Servicios -->
                <li>
                    <a href="#"
                       data-bs-toggle="collapse"
                       data-bs-target="#otherSections1"
                       aria-expanded="false"
                       aria-controls="otherSections1"
                       role="button">
                        <i class="bi bi-list-ol"></i>Servicios
                    </a>
                    <ul class="collapse " id="otherSections1">
                        <li><a asp-controller="Servicios" asp-action="CrearServicio">Crear Servicios</a></li>
                        <li><a asp-controller="Servicios" asp-action="ListaServicio">Lista de Servicios</a></li>
                    </ul>
                </li>
                <!-- Servicios -->
                <li>
                    <a href="#"
                       data-bs-toggle="collapse"
                       data-bs-target="#sala"
                       aria-expanded="false"
                       aria-controls="sala"
                       role="button">
                        <i class="bi bi-house-add"></i>Salas de atencion
                    </a>
                    <ul class="collapse " id="sala">
                        <li><a asp-controller="Sala" asp-action="CrearSala">Crear Sala</a></li>
                        <li><a asp-controller="Sala" asp-action="ListaSala">Lista de salas</a></li>
                    </ul>
                </li>


                <hr />
                <!-- Pacientes -->
                <li>
                    <a href="#"
                       data-bs-toggle="collapse"
                       data-bs-target="#otherSections2"
                       aria-expanded="false"
                       aria-controls="otherSections2"
                       role="button">
                        <i class="bi bi-people-fill"></i></i> Pacientes
                    </a>
                    <ul class="collapse " id="otherSections2">
                        <li><a asp-controller="Paciente" asp-action="CrearPaciente">Crear Paciente</a></li>
                    </ul>
                    <ul class="collapse " id="otherSections2">
                        <li><a asp-controller="Paciente" asp-action="ListaPacientes">Lista de Paciente</a></li>
                    </ul>
                </li>


            </ul>

        </nav>
        <!-- End sidebar -->

        <div class="overlay"></div>

        <!-- Open sidebar -->
        <a class="btn btn-primary btn-customized open-menu" href="#" role="button">
            <i class="fas fa-align-left"></i> Menu | @ViewData["Title"]
        </a>

        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <!-- Footer -->
        <footer class="footer-container">
            <div class="container">
                <div class="row">
                    <div class="col">&copy; AIDEN</div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/Sistema/assets/js/jquery.backstretch.min.js"></script>
    <script src="~/Sistema/assets/js/wow.min.js"></script>
    <script src="~/Sistema/assets/js/jquery.waypoints.min.js"></script>
    <script src="~/Sistema/assets/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Sistema/assets/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
