@model System.Data.DataTable
@{
    ViewData["Title"] = "Lista de Servicios";
    Layout = "_SistemaLayout"; // Ensure this layout file exists in your project
    var buscar = Context.Request.Query["buscar"].ToString();
}
<div class="container">
    <!-- BARRA DE BÚSQUEDA -->
    <div class="alert alert-dark mb-3">
        <form method="get" asp-action="Index" class="d-flex align-items-center">
            <label class="me-2 mb-0">Buscar:</label>
            <input name="buscar"
                   value="@buscar"
                   class="form-control me-2"
                   placeholder="Buscar..." />
            <button type="submit" class="btn btn-primary">Ir</button>
        </form>
        <a asp-controller="Negocio" asp-action="CrearNegocio" class="btn btn-primary">Crear Negocio</a>
    </div>

    <!-- LISTA DE NEGOCIOS -->

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-sm align-middle">
            <thead>
                <tr>
                    @for (int columna = 2; columna < Model.Columns.Count; columna++)
                    {
                        <th>@Model.Columns[columna].ColumnName</th>
                    }
                    <th>Editar</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Rows.Count == 0)
                {
                    <tr>
                        <td class="text-center" colspan="@((Model?.Columns.Count ?? 1) + 2)">
                            Sin datos
                        </td>
                    </tr>
                }
                else
                {
                    for (int fila = 0; fila < Model.Rows.Count; fila++)
                    {
                        var filaActiva = Model.Rows[fila]["activo"]?.ToString();
                        string claseFila = filaActiva == "0" ? "table-danger" : "";

                        <tr class="@claseFila">
                            @for (int columna = 2; columna < Model.Columns.Count; columna++)
                            {
                                <td>@(Model.Rows[fila][columna] ?? "")</td>
                            }
                            <td class="text-center">
                                <form method="post" asp-controller="Servicios" asp-action="EditarServicio" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idServicio" value="@(Model.Rows[fila]["id"].ToString())" />
                                    <button type="submit" class="btn btn-success btn-sm">
                                        Editar
                                    </button>
                                </form>
                            </td>
                            <td class="text-center">
                                <form method="post" asp-controller="Servicios" asp-action="DeshabilitarServicio" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="idServicio" value="@(Model.Rows[fila]["id"].ToString())" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        Deshabilitar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>



</div>