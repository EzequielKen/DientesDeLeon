@model System.Data.DataTable
@{
    ViewData["Title"] = "Lista de Salas";
    Layout = "_SistemaLayout";
    var buscar = Context.Request.Query["buscar"].ToString();
}
<div class="container">
    <!-- BARRA DE BÚSQUEDA -->
    <div class="alert alert-dark mb-3">
        <form method="get" asp-controller="Sala" asp-action="BuscarSala" class="d-flex align-items-center">
            <label class="me-2 mb-0">Buscar:</label>
            <input name="buscar"
                   value="@buscar"
                   class="form-control me-2"
                   placeholder="Buscar..." />
            <button type="submit" name="buscar" class="btn btn-primary">Buscar</button>
        </form>
    </div>

    <!-- LISTA DE NEGOCIOS -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    @* Recorremos las columnas para generar el encabezado *@
                    @for (int columna = 2; columna <= Model.Columns.Count - 1; columna++)
                    {
                        <th>@Model.Columns[columna].ColumnName</th>
                    }
                    <th>Editar</th>
                    <th>Administrar Atencion</th>
                </tr>
            </thead>
            <tbody>
                @* Recorremos cada fila y cada celda *@
                @for (int fila = 0; fila <= Model.Rows.Count - 1; fila++)
                {
                    <tr>
                        @for (int columna = 2; columna <= Model.Columns.Count - 1; columna++)
                        {
                            <td>@Model.Rows[fila][columna].ToString()</td>
                        }
                        <td>
                            <form method="get" asp-controller="Sala" asp-action="EditarSala">
                                <input type="hidden" name="idSala" value="@Model.Rows[fila]["id"].ToString()" />
                                <button type="submit" class="btn btn-primary">
                                    Editar
                                </button>
                            </form>
                        </td>

                        <td>
                            <form method="get" asp-controller="Atencion" asp-action="AdministrarAtencion">
                                <input type="hidden" name="idSala" value="@Model.Rows[fila]["id"].ToString()" />
                                <button type="submit" class="btn btn-success">
                                    Administrar Atencion
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>